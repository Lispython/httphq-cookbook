#!/bin/sh
set -e

TARGET_USER=<%= @options[:user] %>
PID_FILE=<%= @options[:pidfile] %>
CONFIG_FILE=<%= @options[:config_file] %>

. <%= @options[:virtualenv] %>/bin/activate

exec chpst -u $TARGET_USER httphq  server start <% if @options[:port] %>--port=<%= @options[:port] %><% end %> <% if @options[:host] %>--host=<%= @options[:host] %><% end %> <% if @options[:log_level] %>--logging=<%= @options[:log_level] %><% end %> 2>&1